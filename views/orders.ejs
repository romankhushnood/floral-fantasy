<!-- views/orders.ejs -->
<h2 class="text-center my-4">Customer Orders</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Message</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach((order, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= order.name %></td>
        <td><%= order.email %></td>
        <td><%= order.message %></td>
        <td><%= order.created_at %></td>
      </tr>
    <% }); %>
  </tbody>
</table>
<button ><a href="/" class="btn btn-danger">Logout</a></button> 